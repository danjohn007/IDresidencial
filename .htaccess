# Redirigir todas las peticiones a la carpeta public
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si el archivo o directorio no existe en la ra√≠z, buscar en public/
    RewriteCond %{REQUEST_URI} !/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule (.*) public/$1 [L]
</IfModule>
